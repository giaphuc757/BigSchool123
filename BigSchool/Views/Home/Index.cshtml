@model IEnumerable<BigSchool.Models.course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>

                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-tongle-attendance">
                        Going?

                    </button>
                </div>
            </li>
        }
    </ul>
 @section scripts {
            <script>
                $(document).ready(function () {
                    $(".js-tongle-attendance").click(function (e) {
                        var button = $(e.target);
                        $.post("/api/Attendances", { Id: button.attr("data-course-id") })
                            .done(function () {
                                alert("Dang ky khoa hoc thanh cong!!!!");
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info")
                                    .text("Going");
                            }).fail(function () {
                                alert("Hay thu kiem tra lai ban nhe :))");
                            });
                    });
                });
            </script>   
     }
    </div>
